                                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group"> <label asp-for="Price"></label> <input asp-for="Price" class="form-control" placeholder="Please enter your email *" required="required" data-error="Valid Price is required."> </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="imagefile" class="control-label"></label>
                                            <input asp-for="imagefile" accept="Image/*" />
                                            <span asp-validation-for="imagefile" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <label asp-for="Disable" class="control-label"></label>
                                                <input asp-for="Disable" class="form-control" />
                                                <span asp-validation-for="Disable" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <input type="submit" value="Save" class="btn btn-success btn-send pt-2 btn-block " />
                                            <a asp-action="Index" class="btn btn-success btn-send pt-2 btn-block ">Back to List</a>
