    <div class="row ">
        <div class="col-lg-7 mx-auto">
            <div class="card mt-2 mx-auto p-4 bg-light">
                <div class="card-body bg-light">
                    <div class="container">
                        <form id="contact-form" asp-action="Edit" role="form" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" />
                            <div class="controls">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group"> <label asp-for="Name" for="form_name"></label> <input asp-for="Name" id="form_name" class="form-control" placeholder="Please enter your firstname *" required="required" data-error="Name is required."> </div>
